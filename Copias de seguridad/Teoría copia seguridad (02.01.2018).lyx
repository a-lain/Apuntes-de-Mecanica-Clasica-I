\]

\end_inset


\end_layout

\begin_layout Proof
Para estudiar los puntos críticos de la función anterior, vamos a proceder
 a derivar:
\end_layout

\begin_layout Proof
\begin_inset Formula 
\[
\frac{dv}{d\omega_{f}}\left(\omega_{f}\right)=\frac{F}{m}\frac{\sqrt{\left(\omega_{0}^{2}-\omega_{f}^{2}\right)^{2}+4\gamma^{2}\omega_{f}^{2}}-\omega_{f}\frac{2\left(\omega_{0}^{2}-\omega_{f}^{2}\right)\left(-2\omega_{f}\right)+8\gamma^{2}\omega_{f}}{2\sqrt{\left(\omega_{0}^{2}-\omega_{f}^{2}\right)^{2}+4\gamma^{2}\omega_{f}^{2}}}}{\left(\omega_{0}^{2}-\omega_{f}^{2}\right)^{2}+4\gamma^{2}\omega_{f}^{2}}=
\]

\end_inset


\begin_inset Formula 
\[
=\frac{\left(\omega_{0}^{2}-\omega_{f}^{2}\right)^{2}+4\gamma^{2}\omega_{f}^{2}+2\omega_{f}^{2}\left(\omega_{0}^{2}-\omega_{f}^{2}\right)-4\gamma^{2}\omega_{f}^{2}}{\left[\left(\omega_{0}^{2}-\omega_{f}^{2}\right)^{2}+4\gamma^{2}\omega_{f}^{2}\right]^{\frac{3}{2}}}=
\]

\end_inset


\begin_inset Formula 
\[
=\frac{\omega_{0}^{4}-2\omega_{0}^{2}\omega_{f}^{2}+\omega_{f}^{4}+2\omega_{0}^{2}\omega_{f}^{2}-2\omega_{f}^{4}}{\left[\left(\omega_{0}^{2}-\omega_{f}^{2}\right)^{2}+4\gamma^{2}\omega_{f}^{2}\right]^{\frac{3}{2}}}=\frac{-\omega_{f}^{4}+\omega_{0}^{4}}{\left[\left(\omega_{0}^{2}-\omega_{f}^{2}\right)^{2}+4\gamma^{2}\omega_{f}^{2}\right]^{\frac{3}{2}}}
\]

\end_inset


\end_layout

