\begin_inset Formula 
\[
\Leftrightarrow\frac{m_{1}}{m_{2}}\frac{p^{*}}{q^{*}}=\frac{\sin\theta^{*}}{\tan\theta}-\cos\theta^{*}\Leftrightarrow\frac{m_{1}}{m_{2}}\frac{p^{*}}{q^{*}}+\cos\theta^{*}=\frac{\sin\theta^{*}}{\tan\theta}\Leftrightarrow
\]

\end_inset


\begin_inset Formula 
\[
\Leftrightarrow\tan\theta=\frac{\sin\theta^{*}}{\frac{m_{1}}{m_{2}}\frac{p^{*}}{q^{*}}+\cos\theta^{*}}=\frac{\sin\theta^{*}}{\frac{\frac{m_{1}}{m_{2}}p^{*}+q^{*}\cos\theta^{*}}{q^{*}}}=\frac{q^{*}\sin\theta^{*}}{\frac{m_{1}}{m_{2}}p^{*}+q^{*}\cos\theta^{*}}
