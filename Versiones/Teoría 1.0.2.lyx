\end_layout

\begin_layout Proof
Sea 
\begin_inset Formula $O$
\end_inset

 un observador y sea 
\begin_inset Formula $O'$
\end_inset

 otro observador tal que 
\begin_inset Formula $\vec{R}=\overrightarrow{OO'}$
\end_inset

, con 
\begin_inset Formula $\vec{R}$
\end_inset

 no necesariamente constante.
 Entonces para el observador 
\begin_inset Formula $O$
\end_inset

, el factor de pérdida de energía 
\begin_inset Formula $Q$
\end_inset

 viene dado por:
\begin_inset Formula 
\[
Q=T_{f}-T_{i}=\frac{1}{2}m_{1}\left(u_{1}^{2}-v_{1}^{2}\right)+\frac{1}{2}m_{2}\left(u_{2}^{2}-v_{2}^{2}\right)
\]

\end_inset

Mientras que para el observador 
\begin_inset Formula $O'$
\end_inset

, el factor de pérdida de energía 
\begin_inset Formula $Q'$
\end_inset

 viene dado por:
\begin_inset Formula 
\[
Q'=T_{f}'-T_{i}'=\frac{1}{2}m_{1}\left(u'_{1}\,^{2}-v'_{1}\,^{2}\right)+\frac{1}{2}m_{2}\left(u'_{2}\,^{2}-v'_{2}\,^{2}\right)
\]

\end_inset

Por otra parte, tenemos:
\begin_inset Formula 
\[
\vec{u}_{1}'=\dot{\vec{R}}+\vec{u}_{1}\Rightarrow u_{1}'\,^{2}=\dot{R}^{2}+u_{1}^{2}+2\vec{\dot{R}}\cdot\vec{u}_{1}
\]

\end_inset


\begin_inset Formula 
\[
\vec{v}_{1}'=\dot{\vec{R}}+\vec{v}_{1}\Rightarrow v_{1}'\,^{2}=\dot{R}^{2}+v_{1}^{2}+2\vec{\dot{R}}\cdot\vec{v}_{1}
\]

\end_inset


\end_layout

\begin_layout Proof
\begin_inset Formula 
\[
\vec{u}_{2}'=\dot{\vec{R}}+\vec{u}_{2}\Rightarrow u_{2}'\,^{2}=\dot{R}^{2}+u_{2}^{2}+2\vec{\dot{R}}\cdot\vec{u}_{2}
\]

\end_inset


\begin_inset Formula 
\[
\vec{v}_{2}'=\dot{\vec{R}}+\vec{v}_{2}\Rightarrow v_{2}'\,^{2}=\dot{R}^{2}+v_{2}^{2}+2\vec{\dot{R}}\cdot\vec{v}_{2}
\]

\end_inset


\end_layout

\begin_layout Proof
\begin_inset Formula 
\[
Q'=\frac{1}{2}m_{1}\left(\dot{R}^{2}+u_{1}^{2}+2\vec{\dot{R}}\cdot\vec{u}_{1}-\dot{R}^{2}-v_{1}^{2}-2\vec{\dot{R}}\cdot\vec{v}_{1}\right)+\frac{1}{2}m_{2}\left(\dot{R}^{2}+u_{2}^{2}+2\vec{\dot{R}}\cdot\vec{u}_{2}-\dot{R}^{2}+v_{2}^{2}-2\vec{\dot{R}}\cdot\vec{v}_{2}\right)=
\]

\end_inset


\begin_inset Formula 
\[
=\frac{1}{2}m_{1}\left(u_{1}^{2}-v_{1}^{2}+2\vec{\dot{R}}\cdot\left[\vec{u}_{1}-\vec{v}_{1}\right]\right)+\frac{1}{2}m_{2}\left(u_{2}^{2}-v_{2}^{2}+2\vec{\dot{R}}\cdot\left[\vec{u}_{2}-\vec{v}_{2}\right]\right)=
\]

\end_inset


\begin_inset Formula 
\[
=\frac{1}{2}m_{1}\left(u_{1}^{2}-v_{1}^{2}\right)+\frac{1}{2}m_{2}\left(u_{2}^{2}-v_{2}^{2}\right)+\frac{1}{2}\dot{\vec{R}}\cdot\left(m_{1}\vec{u}_{1}+m_{2}\vec{u}_{2}-m_{1}\vec{v}_{1}-m_{2}\vec{v}_{2}\right)=
\]

\end_inset


\begin_inset Formula 
\[
=Q+\frac{1}{2}\dot{\vec{R}}\cdot\left(\vec{p}_{1}+\vec{p}_{2}-\vec{q}_{1}-\vec{q}_{2}\right)
\]

\end_inset

Y, por el teorema 
\begin_inset CommandInset ref
LatexCommand vref
reference "thm:Choque"
plural "false"
caps "false"
noprefix "false"

\end_inset

:
\begin_inset Formula 
\[
\vec{p}_{1}+\vec{p}_{2}=\vec{q}_{1}+\vec{q}_{2}
\]

\end_inset

y, en consecuencia:
\begin_inset Formula 
\[
Q'=Q
\]

\end_inset


\end_layout

